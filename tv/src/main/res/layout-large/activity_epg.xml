<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_epg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>
                <TextView
                    android:id="@+id/channelTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="GAMBA CHANNEL"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/channelLogo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="4"
                    android:src="@drawable/gamba_logo">

                </ImageView>

                <TextView
                    android:id="@+id/currentAction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gambaRed"
                    android:textSize="16sp"
                    android:text="@string/press_ok_to_preview"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/downloadingGuide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gambaRed"
                    android:textSize="@dimen/text_16_sp"
                    android:text="@string/downloading_epg"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="4dp"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:id="@+id/programTitleTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"

                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/programStartTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/programEndTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/subtitleTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold"
                        />

                    <com.dm.emotionrating.library.RatingView
                        android:id="@+id/ratingView"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="-30dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:padding="1dp"
                        app:gap="3dp"/>



                </LinearLayout>
                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"

                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/categoriesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        ></View>
                    <TextView
                        android:id="@+id/yearTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/ratingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"

                    android:layout_weight="1"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/actorsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"></View>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="6dp"
                android:layout_weight="1.3">
                <TextView
                    android:id="@+id/currentHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gambaRed"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    />
                <com.arca.equipfix.gambachanneltv.ui.local_components.GambaExoPlayer
                    android:id="@+id/playerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"


        android:id="@+id/guideTableLayout"
        android:background="@android:color/background_dark"
        >
        <TableRow
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:weightSum="240"
            >

            <TextView
                android:id="@+id/categoryName"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/epg_title_row_text_size"

                android:background="@drawable/white_border_line"
                />
            <TextView
                android:id="@+id/hour1"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="8:00am"
                android:textColor="#ffffff"
                android:textSize="@dimen/epg_title_row_text_size"
                android:background="@drawable/white_border_line"
                />
            <TextView
                android:id="@+id/hour2"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="8:30am"
                android:textColor="#ffffff"
                android:textSize="@dimen/epg_title_row_text_size"
                android:background="@drawable/white_border_line"
                />
            <TextView
                android:id="@+id/hour3"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="9:00am"
                android:textColor="#ffffff"
                android:textSize="@dimen/epg_title_row_text_size"
                android:background="@drawable/white_border_line"
                />
            <TextView
                android:id="@+id/hour4"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="9:30am"
                android:textColor="#ffffff"
                android:textSize="@dimen/epg_title_row_text_size"
                android:background="@drawable/white_border_line"
                />
            <TextView
                android:id="@+id/hour5"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="10:00am"
                android:textColor="#ffffff"
                android:textSize="@dimen/epg_title_row_text_size"
                android:background="@drawable/white_border_line"
                />
            <TextView
                android:id="@+id/hour6"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="10:30am"
                android:textColor="#ffffff"
                android:textSize="@dimen/epg_title_row_text_size"
                android:background="@drawable/white_border_line"
                />
        </TableRow>
        <TableRow
            android:id="@+id/channelRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="240"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutRow1"
                android:background="@drawable/white_border_line">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/epg_channel_logo_height"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:id="@+id/channelLogo1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/epg_channel_name_text_size"
                    android:id="@+id/channelName1"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:id="@+id/channelRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="240"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutRow2"
                android:background="@drawable/white_border_line">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/epg_channel_logo_height"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:id="@+id/channelLogo2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/epg_channel_name_text_size"
                    android:id="@+id/channelName2"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:id="@+id/channelRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="240"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutRow3"
                android:background="@drawable/white_border_line">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/epg_channel_logo_height"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:id="@+id/channelLogo3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/epg_channel_name_text_size"
                    android:id="@+id/channelName3"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:id="@+id/channelRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="240"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutRow4"
                android:background="@drawable/white_border_line_transparent">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/epg_channel_logo_height"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:id="@+id/channelLogo4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/epg_channel_name_text_size"
                    android:id="@+id/channelName4"/>
            </LinearLayout>
        </TableRow>

    </TableLayout>
</LinearLayout>

