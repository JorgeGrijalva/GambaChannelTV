<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_item_focused_height"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/action_item_padding_start"
            android:textSize="@dimen/text_24_sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/playButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fancy:mfb_textFont="robotothin.ttf"
            fancy:mfb_text="@string/play"
            fancy:mfb_focusColor="@color/selectedItem"
            fancy:mfb_icon="@string/cmdi_play"
            android:layout_marginStart="@dimen/action_item_padding_start"
            android:layout_marginEnd="@dimen/action_item_padding_start"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            >

        </com.rilixtech.materialfancybutton.MaterialFancyButton>
    </LinearLayout>

</LinearLayout>