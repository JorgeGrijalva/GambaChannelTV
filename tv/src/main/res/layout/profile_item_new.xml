<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/profileNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_24_sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/menu_left_margin"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_weight="1"></View>

    <TextView
        android:id="@+id/adultsEnabledTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_adults"
        android:textSize="@dimen/text_20_sp"
        android:layout_marginRight="15dp"
        />
    <com.github.angads25.toggle.widget.LabeledSwitch
        android:id="@+id/adultsEnabledSwitch"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="14sp"
        app:colorBorder="@color/colorAccent"
        android:layout_marginRight="6dp"/>

    <TextView
        android:id="@+id/passwordProtectedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_protect"
        android:textSize="@dimen/text_20_sp"
        android:layout_marginRight="15dp"
        />
    <com.github.angads25.toggle.widget.LabeledSwitch
        android:id="@+id/passwordProtectedSwitch"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="14sp"
        app:colorBorder="@color/colorAccent"/>


</LinearLayout>